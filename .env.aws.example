# AWS CryptoPulse Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
FLASK_ENV=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:cryptopulse-notifications

# S3 Configuration (for future file uploads)
S3_BUCKET=cryptopulse-files-bucket

# DynamoDB Table Names (must match your AWS setup)
USERS_TABLE=CryptoPulse_Users
PORTFOLIOS_TABLE=CryptoPulse_Portfolios
TRANSACTIONS_TABLE=CryptoPulse_Transactions
PRICE_ALERTS_TABLE=CryptoPulse_PriceAlerts